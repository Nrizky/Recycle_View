<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/lambang_team"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/mutd" />

    <TextView
        android:id="@+id/nama_team"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_toEndOf="@+id/lambang_team"
        android:gravity="center"
        android:text="Manchester United FC" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/nama_team"
        android:layout_marginStart="25dp"
        android:layout_toEndOf="@id/lambang_team">



    <Button
        android:id="@+id/share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Share" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/share"
            android:text="Lihat"/>


    </RelativeLayout>
</RelativeLayout>